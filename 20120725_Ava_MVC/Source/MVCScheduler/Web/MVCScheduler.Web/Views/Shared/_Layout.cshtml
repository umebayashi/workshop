<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css", "~/Content/css")
		@RenderSection("Styles", required: false)
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
		<div id="container">
			<div id="header">
				@Html.Partial("_ViewSwitcher")
				<div class="content-wrapper">
					<h1>MVCスケジュール管理</h1>
					<div id="login">
						@Html.Partial("_LoginPartial")
					</div>
				</div>
			</div>
			<div id="menu">
				<ul>
					<li>@Html.ActionLink("ホーム", "Index", "Home", new { area = "" }, null)</li>
				</ul>
			</div>
			<div id="contents">
				<div id="subL">
					<div class="section">
						<h2>マスター</h2>
						<ul>
							<li>@Html.ActionLink("リソース", "Index", "Resource", new { area = "Master" }, null)</li>
							<li>@Html.ActionLink("リソースタイプ", "Index", "ResourceType", new { area = "Master" }, null)</li>
							<li>@Html.ActionLink("ユーザ", "Index", "AppUser", new { area = "Master" }, null)</li>
						</ul>
					</div>
					<div class="section">
						<h2>スケジュール管理</h2>
						<ul>
							<li>@Html.ActionLink("リソースの予約", "Index", "ResourceReserve", new { area = "Scheduler" }, null)</li>
							<li>@Html.ActionLink("予定の登録", "Index", "Schedule", new { area = "Scheduler" }, null)</li>
							<li>@Html.ActionLink("会議の登録", "Index", "Meeting", new { area = "Scheduler" }, null)</li>
						</ul>
					</div>
				</div>
				<div id="main">
					@RenderBody()
				</div>
			</div>
			<div id="footer">
			</div>
		</div>

        @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryui", "~/bundles/jqueryval")
        <script type="text/javascript" src="~/Scripts/knockout-2.1.0.js"></script>
		<script type="text/javascript" src=""></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
