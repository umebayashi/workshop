@model MVCScheduler.Web.Areas.Scheduler.Models.ResourceReserveViewModel

@{
	Html.EnableClientValidation();
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

	<fieldset>

		<legend>リソース予約情報</legend>

		@Html.HiddenFor(model => model.ResourceID)
		@Html.HiddenFor(model => model.ReserveUserID)

		<div class="editor-label">
			@Html.LabelFor(model => model.Name)
		</div>
		<div class="editor-field">
			@Html.TextBoxFor(model => model.Name)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.StartDate)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.StartDate)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.EndDate)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.EndDate)
		</div>

		<div class="editor-label">
			@Html.LabelFor(model => model.Memo)
		</div>
		<div class="editor-field">
			@Html.TextAreaFor(model => model.Memo)
		</div>

		<p>
			<input type="submit" value="Save" />
		</p>
	</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts
{
	<script type="text/javascript" src="~/Areas/Scheduler/Scripts/ResourceReserve/Edit.js"></script>
}
